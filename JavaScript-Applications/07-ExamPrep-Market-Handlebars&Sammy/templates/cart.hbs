<section id="viewCart">
    <h1>My Cart</h1>
    <div class="products" id="cartProducts">
        <table>
            <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                {{# each cartProducts}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{description}}</td>
                        <td>{{quantity}}</td>
                        <td>{{totalPrice}}</td>
                        <td><button id="{{_id}}">Discard</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>