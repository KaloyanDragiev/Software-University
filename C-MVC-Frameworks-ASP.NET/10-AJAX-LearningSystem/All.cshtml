@{
    ViewBag.Title = "All";
}

<style>
    .author-name{
    line-height:34px;
    }

    #voting-button{
        float:right;
        margin-top:15px;
    }
    .add-button {
        margin: 10px 0;
    }
    .panel {
        margin: 20px 0;
    }
    h2 {
        text-align: center;
    }
    #custom-search-input{
    padding: 3px;
    border: solid 1px #E4E4E4;
    border-radius: 6px;
    background-color: #fff;
}

#custom-search-input input{
    border: 0;
    box-shadow: none;
}

#custom-search-input button{
    margin: 2px 0 0 0;
    background: none;
    box-shadow: none;
    border: 0;
    color: #666666;
    padding: 0 8px 0 10px;
    border-left: solid 1px #ccc;
}

#custom-search-input button:hover{
    border: 0;
    box-shadow: none;
    border-left: solid 1px #ccc;
}

#custom-search-input .glyphicon-search{
    font-size: 23px;
}
</style>

<div class="container">
    @if (User.IsInRole("BlogAuthor"))
    {
        @Html.ActionLink("Add New Article", "Add", "Articles", null, new { @class = "btn btn-lg btn-info add-button"})
        <br/>
    }
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Search", "Articles", new { area = "Blog" }, FormMethod.Post))
            {
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <input type="search" class="form-control input-lg" id="search-articles" name="content" placeholder="Search..." />
                        <span class="input-group-btn">
                            <button class="btn btn-info btn-lg" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="articles-go-here"></div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#articles-go-here").load("/Blog/Articles/PartialArticles");
        })
    </script>
}