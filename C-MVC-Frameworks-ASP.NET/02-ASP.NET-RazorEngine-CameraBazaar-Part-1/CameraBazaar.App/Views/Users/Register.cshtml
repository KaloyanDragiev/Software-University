@model CameraBazaar.App.Models.BindingModels.RegisterUserBindingModel
@{
    ViewBag.Title = "Register";
}

<h2>Register new account</h2>

<style>
    input {
        display: inline !important
    }
    label {
        width: 130px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.ValidationMessage("UsernameEmail", null, new { @class = "text-danger"})
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(vm => vm.Username)
        @Html.TextBoxFor(vm => vm.Username, null, new {@class = "form-control"})
        @Html.ValidationMessageFor(vm => vm.Username, null, new {@class = "text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Email)
        @Html.TextBoxFor(vm => vm.Email, null, new {@class = "form-control"})
        @Html.ValidationMessageFor(vm => vm.Email, null, new {@class = "text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Phone)
        @Html.TextBoxFor(vm => vm.Phone, null, new {@class = "form-control"})
        @Html.ValidationMessageFor(vm => vm.Phone, null, new {@class = "text-danger"})
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Password)
        @Html.PasswordFor(vm => vm.Password, new {@class = "form-control"})
        @Html.ValidationMessageFor(vm => vm.Password, null, new {@class = "text-danger"})
    </div>


    <div class="form-group">
        @Html.LabelFor(vm => vm.ConfirmPassword)
        @Html.PasswordFor(vm => vm.ConfirmPassword, new {@class = "form-control"})
        @Html.ValidationMessageFor(vm => vm.ConfirmPassword, null, new {@class = "text-danger"})
    </div>

    <br/>
    <input type="submit" class="btn btn-success" value="Register"/>
    @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-danger"})
}

<p>Already have an account? Login @Html.ActionLink("HERE", "Login", "Users")  </p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}