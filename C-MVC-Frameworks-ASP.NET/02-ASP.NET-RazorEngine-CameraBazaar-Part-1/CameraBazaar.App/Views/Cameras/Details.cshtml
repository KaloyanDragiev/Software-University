@using CameraBazaar.App.CustomExtensions
@model CameraBazaar.App.Models.ViewModels.CameraDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<style>
    label {
        width: 150px;
        text-align: right;
    }
</style>

<h2><b>
    @Model.Make @Model.Model - $@Model.Price -
    @{
        if (Model.InStock)
        {
            <span style="color: green">IN STOCK</span>
        }
        else
        {
            <span style="color: red">OUT OF STOCK</span>
        }
    }
</b></h2>

<h3>@Html.ActionLink(Model.SellerName, "Details", "Users", new {id = Model.SellerId}, null)</h3>

@Html.Image(Model.ImageUrl, $"{Model.Make} {Model.Model}", "400", null)

<div class="container">
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.IsFullFrame)
        </div>
        <div class="col-sm-10">
            @(Model.IsFullFrame ? "Yes" : "No")
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.MinShutterSpeed)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(vm => vm.MinShutterSpeed)"
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.MaxShutterSpeed)
        </div>
        <div class="col-sm-10">
            1/@Html.DisplayFor(vm => vm.MaxShutterSpeed)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.MinISO)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(vm => vm.MinISO)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.MaxISO)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(vm => vm.MaxISO)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.VideoResolution)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(vm => vm.VideoResolution)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.LightMetering)
        </div>
        <div class="col-sm-10">
            @{foreach (var lm in Model.LightMetering)
                {
                    <span>- &nbsp;&nbsp; @lm</span><br />
                }
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            @Html.LabelFor(vm => vm.Description)
        </div>
        <div class="col-sm-10">
            @Html.DisplayFor(vm => vm.Description)
        </div>
    </div>
</div>