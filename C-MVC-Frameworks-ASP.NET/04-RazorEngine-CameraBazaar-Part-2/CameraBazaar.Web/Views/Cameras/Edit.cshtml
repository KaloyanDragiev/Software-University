@model EditCameraViewModel

@{
    ViewBag.Title = "Edit";
}

<style>
    #container {
        text-align: center;
    }

    input, textarea {
        display: inline !important;
        margin: 0 0 5px 5px;
    }

    label {
        width: 150px;
        text-align: right;
    }

    #errors > span {
        display: block;
    }
</style>

<div id="container">
    <h2>Edit <b><i>@Model.Name</i></b></h2>

    @using (Html.BeginForm())
    {
        @Html.LabelFor(vm => vm.Price)
        @Html.EditorFor(vm => vm.Price, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
        <br />
        @Html.LabelFor(vm => vm.Quantity)
        @Html.EditorFor(vm => vm.Quantity, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
        <br />
        @Html.LabelFor(vm => vm.Description, null, new { style = "vertical-align: top" })
        @Html.TextAreaFor(vm => vm.Description, new { @class = "form-control", rows = "5", value = $"{Model.Description}" })
        <br />
        @Html.HiddenFor(vm => vm.Id);
        <input type="submit" value="Edit" class="btn btn-success" />
        @Html.ActionLink("Back", "Details", "Users", new { id = Model.UserId }, new { @class = "btn btn-danger" })

        <div id="errors">
            @Html.ValidationMessageFor(vm => vm.Description, null, new { @class = "text-danger" })
            @Html.ValidationMessageFor(vm => vm.Price, null, new { @class = "text-danger" })
            @Html.ValidationMessageFor(vm => vm.Quantity, null, new { @class = "text-danger" })
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}