@model HandleErrorInfo

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Sorry, an error occurred while processing your request.</h1>
        <h2>Error : @Model.Exception.Message</h2>
        <h3>Origin: @Model.ControllerName/@Model.ActionName</h3>
    </hgroup>
</body>
</html>