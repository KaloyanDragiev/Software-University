@using CarDealerApp.Models.ViewModels;
@using System.Collections.Generic;

@model IEnumerable<AddPartSupplierViewModel>

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new Part</h2>

<form method="post" class="form-horizontal">
    <div>
        <label for="name">Name</label> 
        <input class="form-control" type="text" placeholder="Enter part name..." id="name" name="name" />
    </div>
    <div>
        <label for="price">Price</label>
        <input class="form-control" type="number" step="0.01" placeholder="0.00" id="price" name="price">
    </div>
    <div>
        <label for="supplier">Supplier</label>
        <select class="form-control" id="supplier" name="supplierid">
                @foreach (var supplier in Model)
                {
                    <option value="@supplier.Id">@supplier.Name</option>
                }          
        </select>
    </div>
    <div>
        <label for="quantity">Quantity</label>
        <input class="form-control" type="number" value="1" min="1" id="quantity" name="quantity"/>
    </div>
    <br />
    <input type="submit" value="Add" class="btn btn-success" />
</form>