@model IEnumerable<LearningSystem.Models.ViewModels.Admin.ManageCourseViewModel>
@{
    ViewBag.Title = "Courses";
}

<style>
    .btn-container, h2, th, td {
        text-align: center;
    }
</style>

<h2>Manage Courses</h2>

<div class="btn-container">
    @Html.ActionLink("Add New Course", "AddCourse", "Manage", new {area = "Admin"}, new {@class = "btn btn-primary btn-lg"})
</div>
<br/>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(vm => vm.Name)</th>
        <th>Duration</th>
        <th>@Html.DisplayNameFor(vm => vm.TrainerName)</th>
        <th>Manage</th>
    </tr>
    @foreach (var course in Model)
    {
        <tr>
            <td><b>@Html.ActionLink($"{course.Name}", "Details", "Course", new { area = "", id = course.Id }, null)</b></td>
            <td>@course.StartDate.Value.ToString("d MMMM yyyy") - @course.EndDate.Value.ToString("d MMMM yyyy")</td>
            <td>@Html.DisplayFor(vm => course.TrainerName)</td>
            <td>
                @Html.ActionLink("Edit", "EditCourse", "Manage", new { area = "Admin", id = course.Id}, new { @class = "btn btn-warning btn-sm"})
                @Html.ActionLink("Delete", "DeleteCourse", "Manage", new { area = "Admin", id = course.Id}, new { @class = "btn btn-danger btn-sm"})
            </td>
        </tr>
    }
</table>