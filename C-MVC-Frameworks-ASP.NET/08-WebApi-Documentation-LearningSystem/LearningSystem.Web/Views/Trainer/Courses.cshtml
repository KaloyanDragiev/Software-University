@model IEnumerable<LearningSystem.Models.ViewModels.Trainer.TrainerCoursesViewModel>
@{
    ViewBag.Title = "Courses";
}

<h2>List of your courses</h2>

<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(vm => vm.Name)</th>
        <th>@Html.DisplayNameFor(vm => vm.EndDate)</th>
        <th>@Html.DisplayNameFor(vm => vm.NumberOfStudents)</th>
    </tr>
    @{
        foreach (var course in Model)
        {
            <tr>
                <td>@Html.ActionLink($"{course.Name}", "Assess", "Trainer", new {id = course.Id}, null)</td>
                <td>@Html.DisplayFor(vm => course.EndDate)</td>
                <td>@Html.DisplayFor(vm => course.NumberOfStudents)</td>
            </tr>
        }
    }
</table>