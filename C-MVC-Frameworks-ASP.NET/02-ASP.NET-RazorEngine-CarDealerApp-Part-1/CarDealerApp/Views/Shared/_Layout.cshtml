@using CarDealerApp.Security
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Dealer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Car Dealer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Customers
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("All", "Index", "Customers", new { sortType = "all" }, null)</li>
                            <li>@Html.ActionLink("Ascending", "Index", "Customers", new { sortType = "ascending" }, null)</li>
                            <li>@Html.ActionLink("Descending", "Index", "Customers", new { sortType = "descending" }, null)</li>
                            <li>@Html.ActionLink("Add", "Add", "Customers")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Cars<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cars", "Index", "Cars", new { make = "" }, null)</li>
                            <li>@Html.ActionLink("Add", "Add", "Cars")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Suppliers
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("All", "Index", "Suppliers", new { type = "all" }, null)</li>
                            <li>@Html.ActionLink("Local", "Index", "Suppliers", new {type = "local"}, null)</li>
                            <li>@Html.ActionLink("Importers", "Index", "Suppliers", new {type = "importer"}, null)</li>
                            <li>@Html.ActionLink("Add", "Add", "Suppliers")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Sales
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("All", "Index", "Sales")</li>
                            <li>@Html.ActionLink("Discounted", "Discounted", "Sales", new { percent = 0 }, null)</li>
                            <li>@Html.ActionLink("Add", "Add", "Sales")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Parts<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("All", "Index", "Parts")</li>
                            <li>@Html.ActionLink("Add", "Add", "Parts")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Logs<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Logs", "Index", "Logs")</li>
                            <li>@Html.ActionLink("Users Info", "UsersInfo", "Logs")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    @{
                        if (SignInManager.IsAuthenticated(this.Session.SessionID))
                        {
                            <li>@Html.ActionLink($"Hello {SignInManager.GetAuthenticatedUser(this.Session.SessionID).Username}", $"Find/{SignInManager.GetAuthenticatedUser(this.Session.SessionID).Username}", "Logs")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Login", "Login", "Users")</li>
                            <li>@Html.ActionLink("Register", "Register", "Users")</li>
                        }
                    }
                </ul>
            </div>         
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
